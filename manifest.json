{
    "name": "app-verificacao-prazos-dev",
    "version": "1.0.0",
    "description": "Verificação de Prazos – Flow.Doc9: Identifica prazos legais em documentos e gera alertas de vencimento",
    "auth": {
        "description": {
            "title": "Configuração de Acesso",
            "body": "Configure suas credenciais para acessar o serviço.",
            "footer": "As credenciais são armazenadas com segurança.",
            "link": ""
        },
        "params": [
            {
                "name": "whomToken",
                "type": "string",
                "inputType": "text",
                "required": true,
                "label": "Token do Whom"
            },
            {
                "name": "whomExtensionId",
                "type": "string",
                "inputType": "text",
                "required": true,
                "label": "ID da Extensão do Whom"
            }
        ]
    },
    "functions": {
        "verificarPrazos": {
            "script": "dist/verificarPrazos.js",
            "description": "Identifica prazos em documentos",
            "category": "judicial",
            "values": {
                "parametro": "valor"
            },
            "help": {
                "title": "Como usar a função verificarPrazos",
                "body": "Use esta função para identificar prazos legais em documentos fornecidos. Forneça o parâmetro necessário para especificar o documento a ser analisado.",
                "footer": "",
                "link": ""
            },
            "params": [
                {
                    "name": "parametro",
                    "type": "string",
                    "inputType": "text",
                    "required": true,
                    "label": "Parâmetro principal"
                }
            ]
        },
        "criarAlerta": {
            "script": "dist/criarAlerta.js",
            "description": "Cria alerta para prazo identificado",
            "category": "judicial",
            "values": {
                "parametro": "valor"
            },
            "help": {
                "title": "Como usar a função criarAlerta",
                "body": "Use esta função para criar um alerta para um prazo legal identificado. Forneça o parâmetro necessário para especificar os detalhes do alerta.",
                "footer": "",
                "link": ""
            },
            "params": [
                {
                    "name": "parametro",
                    "type": "string",
                    "inputType": "text",
                    "required": true,
                    "label": "Parâmetro principal"
                }
            ]
        }
    },
    "config": {
        "timeout": 60000,
        "max_retries": 3,
        "cache_ttl": 3600
    },
    "mcp": true
}